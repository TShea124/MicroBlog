<!DOCTYPE html>
<html lang="en">
<head>
  <link rel = "stylesheet" href = "/public/styles.css">
  <link href='http://fonts.googleapis.com/css?family=Rock+Salt' rel='stylesheet' type='text/css'>
  <meta charset="UTF-8">
  <title>Post-Authors</title>
</head>
<body>
<% include header %>
<h2> Choose a Topic or #Hashtag: </h2>
<div>
<% microposts.forEach( function(micropost) { %>
<% var array = micropost.tags.split(" "); %>
<% for (var i = 0; i < array.length; i++) { %>
<a href="/micropost/<%= micropost.id %>"> <h4><%= array[i] %></h4> </a>
<% }}); %>
</div>
</body>
</html>